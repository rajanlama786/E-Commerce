@using WebEcommerce.Models.Helper
@model CommonEnitity.Catalog.CatalogItem

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


 <form asp-controller="Catelog" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="password" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>       
     <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PictureFileName" class="control-label"></label>
        <input type="password" asp-for="PictureFileName" class="form-control" />
        <span asp-validation-for="PictureFileName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PictureUri" class="control-label"></label>
        <input asp-for="PictureUri" class="form-control" />
        <span asp-validation-for="PictureUri" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatalogTypeId" class="control-label"></label>
        <input type="password" asp-for="CatalogTypeId" class="form-control" />
        <span asp-validation-for="CatalogTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatalogType" class="control-label"></label>
        <input asp-for="CatalogType" class="form-control" />
        <span asp-validation-for="CatalogType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatalogBrandId" class="control-label"></label>
        <input type="password" asp-for="CatalogBrandId" class="form-control" />
        <span asp-validation-for="CatalogBrandId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatalogBrand" class="control-label"></label>
        <input type="password" asp-for="CatalogBrand" class="form-control" />
        <span asp-validation-for="CatalogBrand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailableStock" class="control-label"></label>
        <input type="password" asp-for="AvailableStock" class="form-control" />
        <span asp-validation-for="AvailableStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RestockThreshold" class="control-label"></label>
        <input type="password" asp-for="RestockThreshold" class="form-control" />
        <span asp-validation-for="RestockThreshold" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxStockThreshold" class="control-label"></label>
        <input type="password" asp-for="MaxStockThreshold" class="form-control" />
        <span asp-validation-for="MaxStockThreshold" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
</form>



    // Maximum number of units that can be in-stock at any time (due to physicial/logistical constraints in warehouses)
    public int MaxStockThreshold { get; set; }
